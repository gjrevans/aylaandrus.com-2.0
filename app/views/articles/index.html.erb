<% content_for(:title) { t(".header_title") } %>
<% content_for(:description) { t(".header_body") } %>

<%= render partial: "layouts/topper", locals: {type: "article", title: t(".header_title"), body: t(".header_body")} %>
<section class="l-content l-content--white l-content--bordered l-content--md">
  <div class="container">
    <h4 class="mb-4"><%= t(".title") %></h4>
    <div class="row">
        <% if @articles.length > 0 %>
          <% @articles.each do |article| %>
            <%= render partial: "article_card", locals: {article: article, extra_class: "mb-3"} %>
          <% end %>
        <% else %>
        <div class="col-md-8 col-sm-12">
          <div class="l-content__outline mb-3">
            <p><%= t('.call_to_action') %></p>
            <%= button_tag t('.call_to_action_button'), class: "btn btn-primary px-5", data: {toggle:"modal", target:"#mailingList"}, type: "button" %>
          </div>
        </div>
        <% end %>
