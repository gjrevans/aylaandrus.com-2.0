<div id="pageContent" class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="float-xs-left">articles</h1>
            <div class="float-xs-right">
                <%= link_to 'New article', new_article_path, class: "btn btn-primary" %>
            </div>
            <table class="table table-hover">
                <thead class="thead-inverse">
                    <tr>
                        <th>#</th>
                        <th>Title</th>
                        <th>Image</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>

                <tbody>
                    <% @articles.each do |article| %>
                    <tr>
                        <th scope="row"><%= article.id %></th>
                        <td><%= article.title %></td>
                        <td><a tabindex="0" role="button" data-toggle="popover" data-trigger="focus" title="article Image" data-content='<img src="<%= image_url(article.image) %>" style="width:100%;height:170px;" alt="article Image">'>Image</a></td>
                        <td><%= article.status %></td>
                        <td>
                            <%= link_to article, title: "show" do %><span class="fa fa-eye mr-1"></span><% end %>
                            <%= link_to edit_article_path(article), title: "edit" do %><span class="fa fa-edit mr-1"></span><% end %>
                            <%= link_to article, method: :delete, data: { confirm: 'Are you sure?' }, title: "delete" do %><span class="fa fa-times"></span><% end %>
                        </td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
$(function () {
    $('[data-toggle="popover"]').popover({
        placement : 'right',
        trigger : 'hover',
        html : true
    });
})
</script>
