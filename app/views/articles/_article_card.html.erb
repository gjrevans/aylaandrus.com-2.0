<% @articles.each do |article| %>
<div class="col-md-4">
    <div class="card">
        <%= image_tag article.image, class:"card-img-top", alt:"codego" %>
        <div class="card-block">
            <h4 class="card-title"><%= article.title %></h4>
            <%= link_to "Read Story", article_path(article), class: "btn btn-block btn-primary" %>
            <% if user_signed_in? %>
                <%= link_to 'Edit', edit_article_path(article), class: "btn btn-block btn-primary" %>
            <% end %>
        </div>
    </div>
</div>
<% end %>
