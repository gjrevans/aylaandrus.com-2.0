<%= render partial: "layouts/topper", locals: {type: "injections", title: t(".header_title"), body: t(".header_body")} %>

<section class="l-content l-content--light l-content--md bb">
  <div class="container text-center">
    <div class="row justify-content-center">
      <div class="col-md-1 col-2">
        <%= image_tag 'logos/oak_icon.svg', class: "fill-primary", alt: t("Oak Clinic") %>
      </div>
      <div class="offset-md-1 col-md-1 offset-1 col-2">
        <%= image_tag 'logos/oak_icon.svg', class: "fill-medium", alt: t("Oak Clinic") %>
      </div>
      <div class="offset-md-1 col-md-1 offset-1 col-2">
        <%= image_tag 'logos/oak_icon.svg', class: "fill-dark", alt: t("Oak Clinic") %>
      </div>
    </div>
  </div>
</section>

<section class="l-content l-content--xx l-content--white l-content--bordered">
  <div class="row no-gutters align-items-center">
    <div class="col-md-6 col-lg-4 order-sm-12">
      <div style='background-image: url("<%= image_path('backgrounds/landscape/vitamins.jpg') %>");' class="l-content__section__image"></div>
    </div>
    <div class="col-md-6 col-lg-8 order-sm-1">
      <div class="container">
        <div class="my-4 my-4 px-sm-5">
          <h4><%= t(".about_injections_title") %></h4>
          <p class="text-muted"><%= t(".about_injections_body") %></p>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="l-content l-content--lg l-content--white l-content--bordered">
  <div class="row justify-content-center text-center">
    <div class="col-md-6 col-lg-8">
      <div class="container">
        <div class="my-4 my-4 px-sm-5">
          <h4><%= t(".injections_appointments_title") %></h4>
          <p class="text-muted"><%= t(".injections_appointments_body") %></p>
          <%= link_to t(".book_now"), "#{t("jane_link")}/#/iv-vitamin-therapy-and-injections", class: "btn btn-primary px-4", target: "_blank" %>
        </div>
      </div>
    </div>
  </div>
</section>
