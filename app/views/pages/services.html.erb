<%= render partial: "layouts/topper", locals: {type: "services", title: t(".header_title"), body: t(".header_body")} %>

<section class="l-content l-content--light l-content--bordered l-content--md">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h4 class="mb-4"><%= t(".initial_apt_title") %></h4>
        <div class="row">
          <% @primary_services.each_with_index do |service, index| %>
          <div class="col-lg-6">
            <div class="card card-hover mb-3">
              <div class="card-body d-flex align-items-center justify-content-center mb-4 mt-5">
                <%= image_tag service['image'], alt: service['title'] %>
              </div>
              <div class="card-body card-body--service text-center">
                <h5><%= service['title'] %></h5>
                <p class="text-muted"><%= service['about'] %></p>
                <p class="text-muted"><%= service['about_more'] %></p>
              </div>
              <div class="card-body bg-light bt text-center rounded-bottom">
                <%= link_to t("book_now"), service['link'], class: "btn btn-primary px-5", target: "_blank" %>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="l-content l-content--light l-content--bordered l-content--md">
  <div class="container">
    <div class="row">
      <h4 class="mb-4"><%= t(".follow_up_title") %></h4>
      <div class="row">
        <% @secondary_services.each do |service| %>
        <div class="col-lg-4">
          <div class="card card-hover mb-3">
            <div class="card-body d-flex align-items-center justify-content-center mb-4 mt-5">
              <%= image_tag service['image'], alt: service['title'] %>
            </div>
            <div class="card-body card-body--service text-center">
              <h5><%= service['title'] %></h5>
              <p class="text-muted"><%= service['about'] %></p>
            </div>
            <div class="card-body card-body--action">
              <% if service['bookable'] %>
              <%= link_to t("book_now"), t("jane_link"), class: "font-weight-bold", target: "_blank" %>
              <% else %>
                <small><%= t(".not_bookable") %></small>
              <% end %>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

<section class="l-content white l-content--bordered l-content--md">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 text-center">
        <h4 class="text-primary"><%= t(".intro_title") %></h4>
        <p><%= t(".intro_body") %></p>
        <%= link_to t("book_now"), t("jane_link"), class: "btn btn-primary px-4", target: "_blank" %>
      </div>
    </div>
  </div>
</section>
