<%= render partial: "layouts/topper", locals: {type: "services", title: t(".header_title"), body: t(".header_body")} %>

<section class="l-content l-content--light l-content--bordered l-content--md">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="row">
          <% @services.each do |service| %>
          <div class="col-lg-4">
            <div class="card card-hover mb-3">
              <div class="card-body d-flex align-items-center justify-content-center mb-4 mt-5">
                <%= image_tag service['image'], alt: service['title'] %>
              </div>
              <div class="card-body text-center">
                <h5><%= service['title'] %></h5>
                <p class="text-muted"><%= service['about'] %></p>
                <%= link_to t("book_now"), "#" %>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="l-content white l-content--bordered l-content--md l-content--pattern-inverted">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 text-center">
        <h4 class="text-primary"><%= t(".intro_title") %></h4>
        <p><%= t(".intro_body") %></p>
        <%= link_to t("book_now"), "#", class: "btn btn-primary px-4" %>
      </div>
    </div>
  </div>
</section>
