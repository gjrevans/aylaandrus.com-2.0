<%= render partial: "layouts/topper", locals: {type: "faq", title: t(".header_title")} %>

<section class="l-content l-content--white l-content--bordered l-content--lg">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="l-content__body">
          <h4><%= t('.s_one_title_one') %></h4>
          <p><%= t('.s_one_body_one').gsub(/\n/, '<br/>').html_safe %></p>
          <br>
          <h4><%= t('.s_one_title_two') %></h4>
          <p><%= t('.s_one_body_two').gsub(/\n/, '<br/>').html_safe %></p>
          <br>
          <h4><%= t('.s_one_title_three') %></h4>
          <p><%= t('.s_one_body_three').gsub(/\n/, '<br/>').html_safe %></p>
          <br>
          <h4><%= t('.s_one_title_four') %></h4>
          <p><%= t('.s_one_body_four').gsub(/\n/, '<br/>').html_safe %></p>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Add Mailing List -->
<%= render partial: "layouts/mailing_list" %>

<section class="l-content l-content--white l-content--bordered l-content--lg">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="l-content__body">
          <h4><%= t('.s_two_header')%></h4>
          <p><%= t('.s_two_body').gsub(/\n/, '<br/>').html_safe %></p>
        </div>
        <div class="row">
          <% @treatments.each do |treatment| %>
          <div class="col-md-3 col-sm-4 mt-3 mb-3 text-center">
            <%= image_tag treatment['image'], class:"l-content__image", alt: treatment['name'] %>
            <h6 class="mt-3"><%= t(treatment['name']) %></h6>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
