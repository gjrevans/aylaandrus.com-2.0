<section class="l-home">
  <div class="container">
    <div class="row">
      <div class="col-md-6 text-center text-sm-left mt-5">
        <h3 class="text-white lh-2">
          <%= t(".header_body") %>
        </h3>
        <!-- Bouncy mc'bounceface -->
        <i data-feather="chevron-down" class=" mt-5 text-white d-sm-none animated infinite bounce"></i>
      </div>
    </div>
  </div>
</section>

<section class="l-content l-content--overlay l-content--xs">
  <div class="container">
    <div class="m-floater">
      <div class="row">
        <div class="col-lg-4 m-floater__section">
          <h5><%= t(".mission_title") %></h5>
          <div class="text-white-muted">
            <%= t(".mission_body") %>
          </div>
        </div>

        <div class="col-lg-4 m-floater__section">
          <h5><%= t(".appointment_title") %></h5>
          <div class="text-white-muted mb-4">
              <%= t(".appointment_body") %>
          </div>
          <%= link_to t(".appointment_cta"), t("jane_link"), class: "btn btn-white btn-block text-primary", target: "_blank" %>
        </div>

        <div class="col-lg-4 m-floater__section">
          <h5>Hours of Operation</h5>
          <div class="text-white-muted">
            <ul>
              <% @hours.each do |day| %>
              <li>
                <span class="text-capitalize"><%= day["name"]%></span>
                <%= day["hours"] %>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="l-content l-content--white l-content--lg l-content--bordered">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8 text-center">
        <h4 class="text-primary"><%= t(".intro_title") %></h4>
        <p>
          <%=
            t(".intro_1",
              products: link_to(t(".products"), products_path),
              services: link_to(t(".services"), services_path),
              iv_therapy: link_to(t(".iv_therapy"), iv_therapy_path),
              injections: link_to(t(".injections"), injections_path),
            ).html_safe
            %>
          </p>
        <a href="mailto:hello@oakclinic.ca" class="btn btn-sm btn-outline-primary px-4"><%= t(".contact_us") %></a>
      </div>
    </div>
  </div>
</section>

<section class="l-content l-content--light l-content--lg">
  <div class="container">
    <div class="row text-center justify-content-center">
      <div class="col-md-6 col-12 text-center">
        <h4 class="text-primary"><%= t(".special_intro_title") %></h4>
        <p class="text-muted"><%= t(".special_intro_body") %></p>
      </div>
    </div>
    <div class="row text-center justify-content-center">
      <div class="col-lg-5 col-md-6 mb-4 mb-md-0">
        <div class="card card--hover">
          <div class="card__body d-flex align-items-center justify-content-center mb-4 mt-5">
            <%= image_tag("icons/stomach.svg") %>
          </div>
          <div class="card__body">
            <h5><%= t(".special_title_1") %></h5>
            <p class="text-muted"><%= t(".special_1") %></p>
          </div>
        </div>
      </div>
      <div class="col-lg-5 col-md-6">
        <div class="card card--hover">
          <div class="card__body d-flex align-items-center justify-content-center mb-4 mt-5">
            <%= image_tag("icons/female.svg") %>
          </div>
          <div class="card__body">
            <h5><%= t(".special_title_2") %></h5>
            <p class="text-muted"><%= t(".special_2") %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="l-content l-content--white l-content--bordered l-content--md">
  <div class="container">
    <div class="row text-center justify-content-center">
      <div class="col-md-6 col-12 text-center">
        <h4 class="text-primary"><%= t(".about_team_title") %></h4>
        <p class="text-muted"><%= t(".about_team_body") %></p>
      </div>
    </div>
    <div class="row">
      <% @team_members.each_with_index do |team_member, index| %>
        <% if team_member["is_practitioner"] %>
          <div class="col-lg-4">
            <div class="card card--hover card--practitioner card-team mb-3 text-center">
              <div class="card__image" style="background-image: url('<%= image_url(team_member['banner']) %>')"></div>
              <div class="card__body">
                <h4 class="mb-0 font-weight-bold"><%= team_member['name'] %></h4>
                <span class="text-primary"><%= team_member['role'] %></span>
                <p class="text-muted"><%= team_member['practice'] %></p>
              </div>
              <div class="card__footer container-fluid">
                <div class="row">
                  <div class="col-md-6 mb-3 mb-md-0">
                    <%= link_to t(".view_schedule"), team_member['schedule'], class: "btn btn-primary btn-block", target: "_blank" %>
                  </div>
                  <div class="col-md-6">
                    <%= link_to t(".learn_more"), team_member['profile'], class: "btn btn-primary btn-block", target: "_blank" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</section>

