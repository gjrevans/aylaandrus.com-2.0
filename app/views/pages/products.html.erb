<%= render partial: "layouts/topper", locals: {type: "products", title: t(".header_title")} %>

<section class="l-content l-content--light l-content--md bb">
  <div class="container text-center">
    <div class="row">
      <% @logos.each do |logo| %>
      <div class="col-md-2 col-4">
        <%= image_tag logo["image"], alt: logo["name"], class: "w-100" %>
      </div>
      <% end %>
    </div>
    <div class="row justify-content-center justify-content-center">
      <div class="col-8">
        <p class="text-muted mb-0"><%= t(".product_logos") %></p>
      </div>
    </div>
  </div>
</section>

<section class="l-content l-content--xx l-content--white l-content--bordered">
  <div class="row no-gutters align-items-center">
    <div class="col-md-4">
      <%= image_tag('backgrounds/portrait/friends.jpg', class: "w-100") %>
    </div>
    <div class="col-md-8">
      <div class="container">
        <div class="my-4 px-5">
          <h4><%= t(".about_partnerships_title") %></h4>
          <p class="text-muted"><%= t(".about_partnerships_1") %></p>
          <p class="text-muted"><%= t(".about_partnerships_1") %></p>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="l-content l-content--xx l-content--white l-content--bordered">
  <div class="row no-gutters align-items-center">
    <div class="col-md-4 order-sm-12">
