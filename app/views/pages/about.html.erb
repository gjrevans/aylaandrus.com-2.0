<section class="m-banner m-banner--about animated fadeIn d-flex align-items-center justify-content-center">
    <div class="container-fluid">
        <div class="m-header">
            <div class="m-header__content">
                <h1 class="m-header__title--md"><%= t('.header_title')%></h1>
            </div>
        </div>
    </div>
</section>
<!-- About The Clinic -->
<section class="l-content l-content__white">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="text-primary"><%= t('.s_one_header')%></h2>
                <hr>
                <div class="l-content__body">
                    <p><%= t('.s_one_body').gsub(/\n/, '<br/>').html_safe %></p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Team -->
<section class="l-content l-content__white">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="text-primary"><%= t('.s_two_header')%></h2>
                <hr>
                <div class="l-content__body">
                    <p><%= t('.s_two_body').gsub(/\n/, '<br/>').html_safe %></p>
                </div>
                <div class="row">
                    <% @team_members.each do |member| %>
                    <div class="col-lg-4 col-md-6 col-sm-12 mt-3 mb-3 text-center">
                        <%= image_tag member['image'], class:"l-content__image", alt: member['name'] %>
                        <h5 class="mt-3"><%= member['name'] %></h5>
                        <p class="mt-3"><%= member['about'] %></p>
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Location -->
<section class="l-content l-content__white">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="text-primary"><%= t('.s_three_header')%></h2>
                <hr>
                <div class="l-content__body">
                    <p><%= t('.s_three_body').gsub(/\n/, '<br/>').html_safe %></p>
                </div>
            </div>
            <div class="col-md-8">
                <div id="map"></div>
            </div>
            <div class="col-md-4 mt-3">
                <h5>12 Avenue Road</h5>
                <p>
                    Dawson Creek, British Columbia<br>
                    Canada
                </p>
                <a href="http://maps.google.com/?q=<%= t('latitude') %>,<%= t('longitude') %>" class="btn btn-outline-primary" target="_blank">
                    <%= t('get_directions') %>
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Google Map -->
<script type="text/javascript">
function initMap() {
    var uluru = {lat: <%= t('latitude') %>, lng: <%= t('longitude') %>};
    var map = new google.maps.Map(document.getElementById('map'), {
        zoom: 16,
        center: uluru
    });
    var marker = new google.maps.Marker({
        position: uluru,
        map: map
    });
}
</script>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=<%= ENV["GOOGLE_MAPS_API"] %>&callback=initMap"></script>
