<section class="m-banner m-banner--medicine">
    <div class="container-fluid">
        <div class="m-header">
            <div class="m-header__content">
                <h1 class="m-header__title--md"><%= t('.header_title')%></h1>
            </div>
        </div>
    </div>
</section>
<section class="l-content l-content--white">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="text-primary"><%= t('.s_one_header')%></h2>
                <hr>
                <div class="l-content__body">
                    <h5><%= t('.s_one_title_one') %></h5>
                    <p><%= t('.s_one_body_one').gsub(/\n/, '<br/>').html_safe %></p>
                    <br>
                    <h5><%= t('.s_one_title_two') %></h5>
                    <p><%= t('.s_one_body_two').gsub(/\n/, '<br/>').html_safe %></p>
                    <br>
                    <h5><%= t('.s_one_title_three') %></h5>
                    <p><%= t('.s_one_body_three').gsub(/\n/, '<br/>').html_safe %></p>
                    <br>
                    <h5><%= t('.s_one_title_four') %></h5>
                    <p><%= t('.s_one_body_four').gsub(/\n/, '<br/>').html_safe %></p>
                </div>
                <div class="l-content__outline">
                    <p><%= t('.s_one_call_to_action') %></p>
                    <%= button_tag t('.button_text'), class: "btn btn-primary px-5", data: {toggle:"modal", target:"#mailingList"}, type: "button" %>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="l-content l-content--white">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="text-primary"><%= t('.s_two_header')%></h2>
                <hr>
                <div class="l-content__body">
                    <p><%= t('.s_two_body').gsub(/\n/, '<br/>').html_safe %></p>
                </div>
                <div class="row">
                    <% @treatments.each do |treatment| %>
                    <div class="col-md-3 col-sm-4 mt-3 mb-3 text-center">
                        <%= image_tag treatment['image'], class:"l-content__image", alt: treatment['name'] %>
                        <h6 class="mt-3"><%= t(treatment['name']) %></h6>
                    </div>
                    <% end %>
                </div>
                <div class="l-content__outline">
                    <p><%= t('.s_two_call_to_action') %></p>
                    <%= button_tag t('.button_text'), class: "btn btn-primary px-5", data: {toggle:"modal", target:"#mailingList"}, type: "button" %>
                </div>
            </div>
        </div>
    </div>
</section>
