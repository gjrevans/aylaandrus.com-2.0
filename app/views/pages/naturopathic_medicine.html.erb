<section class="m-banner m-banner--medicine animated fadeIn">
    <div class="container-fluid">
        <div class="m-header">
            <div class="m-header__content">
                <h1 class="m-header__title--md"><%= t('.header_title')%></h1>
            </div>
        </div>
    </div>
</section>
<section class="l-content l-content__white">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="text-primary"><%= t('.s_one_header')%></h2>
                <hr>
                <div class="l-content__body">
                    <p><%= t('.s_one_body').gsub(/\n/, '<br/>').html_safe %></p>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="l-content l-content__white">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="text-primary"><%= t('.s_two_header')%></h2>
                <hr>
                <div class="l-content__body">
                    <p><%= t('.s_two_body').gsub(/\n/, '<br/>').html_safe %></p>
                </div>
                <div class="row">
                    <% @treatments.each do |treatment| %>
                    <div class="col-md-3 col-sm-4 mt-3 mb-3 text-center">
                        <%= image_tag treatment['image'], class:"l-content__image", alt: treatment['name'] %>
                        <h6 class="mt-3"><%= t(treatment['name']) %></h6>
                    </div>
                    <% end %>
                </div>
                <hr>
                <div class="l-content__body text-center">
                    <p><%= t('.s_two_call_to_action') %></p>
                    <div class="col-md-6 offset-md-3 col-sm-8 offset-sm-2">
                        <button type="button" name="button" class="btn btn-primary" data-toggle="modal" data-target="#mailingList"><%= t('.button_text')%></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
